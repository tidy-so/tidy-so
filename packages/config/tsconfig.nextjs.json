{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Aliases
    "paths": {
      "~client/*": [
        "src/client/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~hooks/*": [
        "src/hooks/*"
      ],
      "~layouts/*": [
        "src/layouts/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~server/*": [
        "src/server/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ]
    }
    // End aliases
  }
}
